<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.simone.myuniversity.ModificaEsamiCheStaiSeguendo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="Questi sono gli Esami che stai seguendo"
        android:id="@+id/tv_modSeg_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="Cosa Vuoi Fare?"
        android:id="@+id/tv_modSeg_2"
        android:layout_below="@+id/tv_modSeg_1"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/lv_modSeg"
        android:layout_below="@+id/tv_modSeg_2"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/btn_cancExamSeg"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Elimina Seguito"
        android:onClick="onClick_cancExamSeg"
        android:id="@+id/btn_cancExamSeg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Aggiungi Seguito"
        android:onClick="onClick_aggExamSeg"
        android:id="@+id/btn_aggExamSeg"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Conferma Seguiti"
        android:onClick="onClick_confSeg"
        android:id="@+id/btn_confSeg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/tv_modSeg_4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
