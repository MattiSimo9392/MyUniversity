<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.simone.myuniversity.GestionePrenotazioneEsami"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cosa vuoi fare?"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prenota un nuovo esame"
        android:onClick="onClick_aggPren"
        android:id="@+id/btn_aggPren"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modifica prenotazione di un esame"
        android:onClick="onClick_modPren"
        android:id="@+id/btn_modPren"
        android:layout_marginTop="80dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elimina prenotazione a un esame"
        android:onClick="onClick_cancPren"
        android:id="@+id/btn_cancPren"
        android:layout_marginTop="80dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fine"
        android:onClick="onClick_endPren"
        android:id="@+id/btn_endPren"
        android:layout_marginTop="80dp"/>

</LinearLayout>
