<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.simone.myuniversity.GestionePrenotazioneEsamiModifica">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Questi sono gli esami che hai prenotato"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_modExam_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clicca sull'esame del quale vuoi modificare"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_modExam_2"
        android:layout_below="@+id/tv_modExam_1"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="la data di prenotazione"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_modExam_3"
        android:layout_below="@+id/tv_modExam_2"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_modExam"
        android:layout_below="@+id/tv_modExam_3"
        android:layout_above="@+id/btn_modExam_end"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fine"
        android:onClick="onClick_modExam_end"
        android:id="@+id/btn_modExam_end"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/tv_modExam_4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
