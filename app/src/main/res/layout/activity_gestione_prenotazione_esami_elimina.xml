<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.simone.myuniversity.GestionePrenotazioneEsamiElimina">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Questi sono gli esami che hai prenotato"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_cancExam_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clicca sull'esame del quale vuoi cancellare"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_cancExam_2"
        android:layout_below="@+id/tv_cancExam_1"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="la prenotazione"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_cancExam_3"
        android:layout_below="@+id/tv_cancExam_2"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_cancExam"
        android:layout_below="@+id/tv_cancExam_3"
        android:layout_above="@+id/btn_cancExam_end"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fine"
        android:onClick="onClick_cancExam_end"
        android:id="@+id/btn_cancExam_end"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/tv_cancExam_4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
