<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.simone.myuniversity.FifthRegistrationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Questi sono gli esami che NON hai ancora Superato"
        android:id="@+id/tv_5_1"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Seleziona quelli che stai seguendo"
        android:id="@+id/tv_5_2"
        android:layout_below="@+id/tv_5_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="durante questo Semestre"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_5_3"
        android:layout_below="@+id/tv_5_2"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/listPSfinale3"
        android:layout_below="@+id/tv_5_3"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/buttonBack_5"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indietro"
        android:id="@+id/buttonBack_5"
        android:onClick="onClick_back5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fine"
        android:id="@+id/btn_continuaRegistrazione5"
        android:onClick="onClick_continue5"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
