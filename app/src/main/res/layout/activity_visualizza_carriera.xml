<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.simone.myuniversity.VisualizzaCarriera">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carriera Studente"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=""
        android:id="@+id/Studente"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/tv_title"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=""
        android:layout_below="@+id/Studente"
        android:layout_alignParentStart="true"
        android:id="@+id/Matricola"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=""
        android:id="@+id/tv_CFU"
        android:layout_below="@+id/Matricola"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=""
        android:id="@+id/tv_EsamiMancanti"
        android:layout_below="@+id/Matricola"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=""
        android:id="@+id/EsamiPassati"
        android:layout_below="@+id/tv_EsamiMancanti"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@android:id/list"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/EsamiPassati"
        android:layout_above="@+id/btn_showCareer_end"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=""
        android:id="@+id/tv_MediaPesata"
        android:layout_alignTop="@+id/EsamiPassati"
        android:layout_alignStart="@+id/tv_CFU" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fine"
        android:onClick="onClick_showCareer_end"
        android:id="@+id/btn_showCareer_end"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
