<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.simone.myuniversity.ThirdRegistrationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confermi gli esami scelti?"
        android:id="@+id/tv_conferma"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/listPSfinale"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_conferma"
        android:layout_above="@+id/buttonBack"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indietro"
        android:onClick="onClick_back3"
        android:id="@+id/buttonBack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conferma"
        android:onClick="onClick_continue3"
        android:id="@+id/btn_continuaRegistrazione2"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/buttonBack"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
