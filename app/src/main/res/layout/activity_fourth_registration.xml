<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.simone.myuniversity.FourthRegistrationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Questi sono gli esami del tuo Piano Di Studi"
        android:id="@+id/tv_4_1"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Seleziona quelli che hai giÃ  superato ed indica"
        android:id="@+id/tv_4_2"
        android:layout_below="@+id/tv_4_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="il Voto e la Data del Superamento"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_4_3"
        android:layout_below="@+id/tv_4_2"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/listPSfinale2"
        android:layout_below="@+id/tv_4_3"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/buttonBack_4"/>

    <Button
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:text="Indietro"
        android:id="@+id/buttonBack_4"
        android:onClick="onClick_back4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:text="Continua"
        android:id="@+id/btn_continuaRegistrazione4"
        android:onClick="onClick_continue4"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
