<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.simone.myuniversity.ModificaPianoStudi">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="Questo Ã¨ il tuo Piano di Studi attuale"
        android:id="@+id/tv_modPS_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="Cosa Vuoi Fare?"
        android:id="@+id/tv_modPS_2"
        android:layout_below="@+id/tv_modPS_1"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/lv_modPS"
        android:layout_below="@+id/tv_modPS_2"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/btn_cancExam"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Elimina Esame"
        android:onClick="onClick_cancExam"
        android:id="@+id/btn_cancExam"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Aggiungi Esame"
        android:onClick="onClick_aggExam"
        android:id="@+id/btn_aggExam"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Conferma Piano"
        android:onClick="onClick_confCarr"
        android:id="@+id/btn_confCarr"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/tv_modPS_4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
