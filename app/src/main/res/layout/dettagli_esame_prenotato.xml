<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Data: "
        android:textStyle="bold"
        android:id="@+id/tv_data_1"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Orario: "
        android:textStyle="bold"
        android:id="@+id/tv_ora_1"
        android:layout_below="@+id/tv_data_1"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Aula: "
        android:textStyle="bold"
        android:id="@+id/tv_aula_1"
        android:layout_below="@+id/tv_ora_1"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tv_data_2"
        android:layout_toEndOf="@+id/tv_data_1"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tv_ora_2"
        android:layout_toEndOf="@+id/tv_ora_1"
        android:layout_below="@+id/tv_data_2"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tv_aula_2"
        android:layout_toEndOf="@+id/tv_aula_1"
        android:layout_below="@+id/tv_ora_2"
        android:layout_marginTop="10dp"/>

</RelativeLayout>